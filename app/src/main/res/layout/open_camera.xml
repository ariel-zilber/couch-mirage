<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenCameraActivity">

    <include layout="@layout/camera_top_panel" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.huji.couchmirage.MyArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomPanel"
        android:layout_below="@+id/topPanel"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="-11dp"
        android:layout_marginBottom="-107dp"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include layout="@layout/camera_bottom_scale" />

    <include layout="@layout/camera_bottom_panel" />


    <include layout="@layout/camera_loading_animation" />


</RelativeLayout>